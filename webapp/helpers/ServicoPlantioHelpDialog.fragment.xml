<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		title="Serviço de Plantio"
		class="sapUiPopupWithPadding sapUiSizeCompact"
		items="{path: '/ServicoPlantios', sorter: {path: 'Descricao'}}"
		search="_handleValueHelpSearch"
		confirm="_handleValueHelpClose"
		cancel="_handleValueHelpClose">
		<ColumnListItem>
			<cells>
				<ObjectNumber
					number="{Codigo}"/>
				<ObjectIdentifier
					title="{Descricao}"/>
			</cells>
		</ColumnListItem>
		<columns>
			<Column width="6em">
				<header>
					<Text text="Código"/>
				</header>
			</Column>
			<Column width="30em">
				<header>
					<Text text="Descrição"/>
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>